        <clear/>
        <add name="AsliMotorRoleProvider" type="AsliMotor.Security.Provider.AsliMotorRoleProvider, AsliMotor.Security" applicationName="AsliMotor" />
      </providers>
    </roleManager>
  </system.web>
  
  <appSettings>
  </appSettings>
  
