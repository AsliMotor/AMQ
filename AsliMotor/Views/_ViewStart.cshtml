@using AsliMotor.Models
@{
    if (this.Request.IsAuthenticated)
    {
        CompanyProfile cp = new CompanyProfile(this.Context);
        if (cp.Role == 1)
        {
            Layout = "~/Views/Shared/_LayoutOwner.cshtml";
        }
        else if (cp.Role == 5)
        {
            Layout = "~/Views/Shared/_LayoutBranch.cshtml";
        }
        else
        {
            Layout = "~/Views/Shared/_Layout.cshtml";
        }
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}